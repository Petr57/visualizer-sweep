#include <lis331dl.h>

eeprom int x=0;

void main(void)
{
    char data=0x00;  
    char address=0x20;
    acc_init(); 
    DDRB=0xff;
    while(1)
    {    
        set_at_address(adress,data);
        delay_ms(10);               
        PORTB=get_at_address(address);  
        data++;
        delay_ms(1000);    
    } 
    x=0;
}